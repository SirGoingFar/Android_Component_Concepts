<resources>
    <declare-styleable name="ModuleStatusView">
        <attr name="outlineColor" format="color"/>
        <attr name="outlineWidth" format="dimension"/>
        <attr name="shape" format="enum">
            <enum name="circle" value="0"/>
            <enum name="square" value="1"/>
        </attr>
        <attr name="shapeSize" format="dimension"/>
        <attr name="shapeFill" format="color"/>
        <attr name="shapeSpacing" format="dimension"/>
    </declare-styleable>
</resources>
